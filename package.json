{
  "name": "takeoff-ui",
  "private": true,
  "version": "1.6.2",
  "description": "Takeoff UI - Turkish Technology",
  "author": "Turkish Technology Frontend Infrastructure Team < takeoffui@thy.com >",
  "homepage": "https://takeoffui.thy.com",
  "workspaces": [
    "packages/*",
    "apps/*",
    "packages/angular/projects/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@stencil-community/eslint-plugin": "^0.9.0",
    "@types/node": "^20.13.0",
    "@types/react": "^18.3.5",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.1",
    "rimraf": "^6.0.1",
    "turbo": "^1.13.3",
    "typescript": "^5.5.4"
  },
  "scripts": {
    "build": "turbo run build --filter=!react-app --filter=!vue-app --filter=!angular-package --filter=!projects/app",
    "dev:vue": "turbo run dev --filter=vue-app",
    "dev:react": "turbo run dev --filter=react-app",
    "dev:ng": "turbo run dev --filter=angular",
    "prepare": "husky",
    "format": "prettier --write \"**/*.{ts, tsx, js, jsx, d.ts, d.js, vue}\" --cache",
    "lint": "eslint --fix",
    "clean": "pnpm -r exec rimraf dist node_modules .stencil .angular .next .output .turbo node_modules"
  },
  "lint-staged": {
    "*.{tsx,ts,js}": [
      "prettier --write \"**/*.{ts, tsx, js, jsx, d.ts, d.js, vue}\" --cache"
    ]
  },
  "engines": {
    "node": ">= 20.12.2",
    "pnpm": ">= 8.0.0"
  },
  "preinstall": "npx only-allow pnpm",
  "dependencies": {
    "@takeoff-ui/angular": "workspace:*",
    "@takeoff-ui/core": "workspace:*",
    "@takeoff-ui/react": "workspace:*",
    "@takeoff-ui/vue": "workspace:*"
  }
}